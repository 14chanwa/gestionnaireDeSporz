<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/role_simple_tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/role_simple_tv_resultat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/role_simple_separation"
        android:layout_below="@id/role_simple_tv_desc"
        android:gravity="bottom"
        android:paddingBottom="@dimen/activity_vertical_margin" />

    <View
        android:id="@+id/role_simple_separation"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/role_simple_spinner"
        android:background="@color/colorGray" />

    <Spinner
        android:id="@+id/role_simple_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/activity_vertical_margin" />


</RelativeLayout>