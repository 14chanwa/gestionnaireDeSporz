<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/dialog_modif_perso_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifiez les propriétés du personnage..." />

    <CheckBox
        android:id="@+id/dialog_check_paralyse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_modif_perso_tv"
        android:text="Le personnage est paralysé" />

    <CheckBox
        android:id="@+id/dialog_check_contamine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_check_paralyse"
        android:text="Le personnage est contaminé" />

    <CheckBox
        android:id="@+id/dialog_check_mort"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_check_contamine"
        android:text="Le personnage est mort" />
</RelativeLayout>