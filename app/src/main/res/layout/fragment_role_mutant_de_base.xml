<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/role_mutant_radiogroup"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/role_mutant_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ScrollView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/role_mutant_radiogroup"
        android:background="@color/colorGray" />

    <RadioGroup
        android:id="@+id/role_mutant_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/role_mutant_spinner"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RadioButton
            android:id="@+id/role_mutant_radiobutton_muter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muter" />

        <RadioButton
            android:id="@+id/role_mutant_radiobutton_tuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuer" />
    </RadioGroup>

    <Spinner
        android:id="@+id/role_mutant_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/role_mutant_textview_aux" />

    <TextView
        android:id="@+id/role_mutant_textview_aux"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/role_mutant_spinner_paralyse"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:text="Personnage Ã  paralyser :" />

    <Spinner
        android:id="@+id/role_mutant_spinner_paralyse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>